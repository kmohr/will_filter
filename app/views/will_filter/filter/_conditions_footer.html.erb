<div class="actions">
  Order:
  <%= select_tag(:wf_order, options_for_select(wf_filter.sort_options, wf_filter.order), {:onChange=>"markDirty()"}) %>
  <%= select_tag(:wf_order_type, options_for_select(wf_filter.order_type_options, wf_filter.order_type), {:onChange=>"markDirty()", :style=>"width:60px"}) %>
  Order2:
  <%= select_tag(:wf_order2, options_for_select(wf_filter.sort_options, wf_filter.order2), {:onChange=>"markDirty()"}) %>
  <%= select_tag(:wf_order_type2, options_for_select(wf_filter.order_type_options, wf_filter.order_type2), {:onChange=>"markDirty()", :style=>"width:60px"}) %>
  Order3:
  <%= select_tag(:wf_order3, options_for_select(wf_filter.sort_options, wf_filter.order3), {:onChange=>"markDirty()"}) %>
  <%= select_tag(:wf_order_type3, options_for_select(wf_filter.order_type_options, wf_filter.order_type3), {:onChange=>"markDirty()", :style=>"width:60px"}) %>
  Per Page:
  <%= select_tag(:wf_per_page, options_for_select(wf_filter.per_page_options, wf_filter.per_page.to_s), {:onChange=>"markDirty()"}) %>
  &nbsp;&nbsp;
  <%=link_to_function("<span>Submit Filter</span>".html_safe, "wfFilter.submit()", :class => "wf_grey_button wf_pcb") %>
</div>
<div>
  <%=link_to_function("<span><b>&plus;</b> Add</span>".html_safe, "wfFilter.addCondition()", :class => "wf_grey_button wf_pcb") %>
  <%=link_to_function("<span>Clear</span>".html_safe, "wfFilter.removeAllConditions()", :class => "wf_grey_button wf_pcb") %>
  &nbsp;&nbsp;
  <span id="wf_loader" class="spinner" style="display:none;">
    <%=image_tag "will_filter/spinner.gif" %> Loading...
  </span>
</div>